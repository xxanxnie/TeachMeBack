<div class="container py-4" style="max-width: 960px;">
  <div class="row g-4">
    <div class="col-lg-8">
      <div class="card shadow-sm">
        <div class="card-header bg-light d-flex justify-content-between align-items-center">
          <div>
            <h2 class="h4 mb-0"><%= @skill_exchange_request.teach_skill %> ↔ <%= @skill_exchange_request.learn_skill %></h2>
            <p class="text-muted mb-0">Posted by <strong><%= @skill_exchange_request.user.full_name %></strong></p>
          </div>
          <span class="badge <%= @skill_exchange_request.status_open? ? 'bg-success' : @skill_exchange_request.status_matched? ? 'bg-primary' : 'bg-secondary' %>">
            <%= @skill_exchange_request.status.humanize %>
          </span>
        </div>
        <div class="card-body">
          <div class="row g-3">
            <div class="col-md-6">
              <h3 class="h6 text-uppercase text-muted">Teaching</h3>
              <p class="mb-1 fw-semibold"><%= @skill_exchange_request.teach_skill %></p>
              <p class="text-muted small mb-0">
                Level: <%= @skill_exchange_request.teach_level.humanize %> ·
                Category: <%= @skill_exchange_request.teach_category_label %>
              </p>
            </div>
            <div class="col-md-6">
              <h3 class="h6 text-uppercase text-muted">Learning</h3>
              <p class="mb-1 fw-semibold"><%= @skill_exchange_request.learn_skill %></p>
              <p class="text-muted small mb-0">
                Level: <%= @skill_exchange_request.learn_level.humanize %> ·
                Category: <%= @skill_exchange_request.learn_category_label %>
              </p>
            </div>
          </div>

          <hr>

          <div class="row g-3">
            <div class="col-md-6">
              <p class="mb-1"><strong>Modality:</strong> <%= @skill_exchange_request.modality.humanize %></p>
              <p class="mb-1"><strong>Offer:</strong> <%= @skill_exchange_request.offer_hours %> hours/week</p>
              <% raw_avail = (defined?(SkillExchangeRequest::DAYS) && @skill_exchange_request.respond_to?(:availability_days)) ? Array(@skill_exchange_request.availability_days) : [] %>
              <% if raw_avail.any? %>
                <% display_days = raw_avail.map { |i| SkillExchangeRequest::DAYS[i.to_i] rescue nil }.compact.join(", ") %>
                <p class="mb-1"><strong>Availability:</strong> <%= display_days %></p>
              <% end %>
              <p class="mb-0 text-muted small">Expires after <%= @skill_exchange_request.expires_after_days %> days</p>
            </div>
            <div class="col-md-6">
              <% if @skill_exchange_request.learning_goal.present? %>
                <div class="mb-3">
                  <h3 class="h6 text-uppercase text-muted">Learning Goal</h3>
                  <p class="mb-0"><%= simple_format(@skill_exchange_request.learning_goal) %></p>
                </div>
              <% end %>
              <% if @skill_exchange_request.notes.present? %>
                <div class="mb-3">
                  <h3 class="h6 text-uppercase text-muted">Notes</h3>
                  <p class="mb-0"><%= simple_format(@skill_exchange_request.notes) %></p>
                </div>
              <% end %>
            </div>
          </div>

          <div class="d-flex justify-content-between align-items-center mt-3">
            <%= link_to "Back to Profile", profile_path, class: "btn btn-outline-secondary" %>
            <% if @skill_exchange_request.status_open? %>
              <%= button_to "Mark as completed",
                            skill_exchange_request_path(@skill_exchange_request),
                            method: :patch,
                            params: { skill_exchange_request: { status: :closed } },
                            class: "btn btn-success" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <div class="col-lg-4">
      <div class="card shadow-sm h-100">
        <div class="card-header bg-light">
          <h3 class="h6 mb-0">Reviews</h3>
        </div>
        <div class="card-body">
          <% reviews = @skill_exchange_request.reviews.includes(:reviewer) %>
          <% if reviews.any? %>
            <% reviews.each do |review| %>
              <% filled = "★" * review.rating.to_i %>
              <% empty  = "☆" * (5 - review.rating.to_i) %>
              <div class="mb-3">
                <div class="d-flex align-items-center gap-2">
                  <span class="text-warning"><%= filled %><%= empty %></span>
                  <span class="small text-muted"><%= review.rating %>/5 from <%= review.reviewer.full_name %></span>
                </div>
                <div class="text-muted small"><%= review.content %></div>
              </div>
            <% end %>
          <% else %>
            <p class="text-muted mb-0 small">No reviews yet for this request.</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

