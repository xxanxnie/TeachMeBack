<div class="container py-4">
  <div class="row g-4">
    <!-- Left: Profile summary card -->
    <div class="col-lg-4">
      <div class="card shadow-sm p-4">
        <div class="d-flex align-items-center gap-3">
          <!-- Profile picture placeholder (initials circle) -->
          <div class="rounded-circle bg-secondary text-white d-flex align-items-center justify-content-center"
               style="width: 72px; height: 72px; font-weight: 700; font-size: 1.25rem;">
            <%= (@user.full_name.to_s.split.map { |n| n[0] }.join.first(2).presence || "TM") %>
          </div>
          <div class="flex-grow-1">
            <div class="d-flex align-items-center gap-2">
              <h2 class="h4 mb-0"><%= @user.full_name %></h2>
              <button class="btn btn-sm btn-outline-primary py-0" type="button" data-bs-toggle="collapse" data-bs-target="#nameEditInline" aria-expanded="false" aria-controls="nameEditInline" title="Edit name">✏️</button>
            </div>
            <div class="collapse mt-2" id="nameEditInline">
              <%= form_with model: @user, url: profile_path, method: :patch, local: true do |f| %>
                <div class="row g-2">
                  <div class="col-6">
                    <%= f.label :first_name, class: "form-label small mb-1" %>
                    <%= f.text_field :first_name, class: "form-control form-control-sm" %>
                  </div>
                  <div class="col-6">
                    <%= f.label :last_name, class: "form-label small mb-1" %>
                    <%= f.text_field :last_name, class: "form-control form-control-sm" %>
                  </div>
                </div>
                <div class="mt-2 d-flex gap-2">
                  <%= f.submit "Save", class: "btn btn-primary btn-sm" %>
                  <button class="btn btn-outline-secondary btn-sm" type="button" data-bs-toggle="collapse" data-bs-target="#nameEditInline">Cancel</button>
                </div>
              <% end %>
            </div>
            <div class="text-muted small">Email (read‑only)</div>
            <div class="fw-medium"><%= @user.email %></div>
          </div>
        </div>
      </div>

      

      <!-- About Me with inline edit (moved to left column) -->
      <div class="card shadow-sm p-4 mt-3">
        <div class="d-flex justify-content-between align-items-center">
          <h3 class="h5 mb-0">About Me</h3>
          <button class="btn btn-sm btn-outline-primary" type="button" data-bs-toggle="collapse" data-bs-target="#bioEdit" aria-expanded="false" aria-controls="bioEdit">Edit</button>
        </div>
        <p class="mt-2 mb-0"><%= @user.bio.presence || content_tag(:span, "No bio yet.", class: "text-muted") %></p>
        <div class="collapse mt-3" id="bioEdit">
          <%= form_with model: @user, url: profile_path, method: :patch, local: true do |f| %>
            <%= f.label :bio, class: "form-label" %>
            <%= f.text_area :bio, rows: 4, class: "form-control", placeholder: "Tell others what you’re into and what you’re looking to learn/teach." %>
            <div class="mt-2 d-flex gap-2">
              <%= f.submit "Save", class: "btn btn-primary btn-sm" %>
              <button class="btn btn-outline-secondary btn-sm" type="button" data-bs-toggle="collapse" data-bs-target="#bioEdit">Cancel</button>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Location / University with inline edit (moved to left column) -->
      <div class="card shadow-sm p-4 mt-3">
        <div class="d-flex justify-content-between align-items-center">
          <h3 class="h5 mb-0">Location / University</h3>
          <button class="btn btn-sm btn-outline-primary" type="button" data-bs-toggle="collapse" data-bs-target="#locEdit" aria-expanded="false" aria-controls="locEdit">Edit</button>
        </div>
        <div class="row mt-2">
          <div class="col-md-6">
            <div class="text-muted small">Location</div>
            <div><%= @user.location.presence || content_tag(:span, "Add location", class: "text-muted") %></div>
          </div>
          <div class="col-md-6 mt-2 mt-md-0">
            <div class="text-muted small">University</div>
            <div><%= @user.university.presence || content_tag(:span, "Add university", class: "text-muted") %></div>
          </div>
        </div>
        <div class="collapse mt-3" id="locEdit">
          <%= form_with model: @user, url: profile_path, method: :patch, local: true do |f| %>
            <div class="row g-2">
              <div class="col-md-6">
                <%= f.label :location, class: "form-label" %>
                <%= f.text_field :location, class: "form-control", placeholder: "City, State" %>
              </div>
              <div class="col-md-6">
                <%= f.label :university, class: "form-label" %>
                <%= f.text_field :university, class: "form-control", placeholder: "e.g., Northeastern University" %>
              </div>
            </div>
            <div class="mt-2 d-flex gap-2">
              <%= f.submit "Save", class: "btn btn-primary btn-sm" %>
              <button class="btn btn-outline-secondary btn-sm" type="button" data-bs-toggle="collapse" data-bs-target="#locEdit">Cancel</button>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Right: Profile details and Exchange activity -->
    <div class="col-lg-8">
      

      <!-- Skills I Can Teach -->
      <div class="card shadow-sm p-4">
        <h3 class="h5 mb-3">Skills I Can Teach</h3>
        <% skills = @user.skill_exchange_requests.pluck(:teach_skill).select(&:present?).uniq %>
        <% if skills.any? %>
          <div class="d-flex flex-wrap gap-2">
            <% skills.each do |skill| %>
              <span class="badge rounded-pill text-bg-primary" style="background: linear-gradient(90deg, #002F6C, #0056A3);"> <%= skill %> </span>
            <% end %>
          </div>
        <% else %>
          <p class="text-muted mb-0">No skills listed yet. Post a request to add what you can teach.</p>
        <% end %>

        <div class="mt-3">
          <%= link_to "Post a new skill exchange request", new_skill_exchange_request_path, class: "btn btn-outline-primary" %>
        </div>
      </div>

      <!-- Exchange Activity -->
      <div class="card shadow-sm p-4 mt-3">
        <h3 class="h5">Exchange Activity</h3>
        <hr>
        <% active = @user.skill_exchange_requests.where(status: [SkillExchangeRequest.statuses[:open], SkillExchangeRequest.statuses[:matched]]).order(created_at: :desc) %>
        <h4 class="h6 text-uppercase text-muted mt-2">Active Skill Exchange Requests</h4>
        <% if active.any? %>
          <ul class="list-group list-group-flush">
            <% active.each do |req| %>
              <li class="list-group-item px-0">
                <div class="d-flex justify-content-between align-items-center flex-wrap gap-2">
                  <div>
                    <strong><%= req.teach_skill %></strong> → <strong><%= req.learn_skill %></strong>
                    <span class="badge bg-secondary ms-2"><%= req.status.humanize %></span>
                  </div>
                  <div class="text-muted small"><%= req.created_at.strftime('%b %d, %Y') %></div>
                </div>
              </li>
            <% end %>
          </ul>
        <% else %>
          <p class="text-muted mb-0">No active requests yet.</p>
        <% end %>

        <% completed = @user.skill_exchange_requests.where(status: SkillExchangeRequest.statuses[:closed]).order(updated_at: :desc) %>
        <h4 class="h6 text-uppercase text-muted mt-4">History / Past Exchanges</h4>
        <% if completed.any? %>
          <ul class="list-group list-group-flush">
            <% completed.each do |req| %>
              <li class="list-group-item px-0">
                <div class="d-flex justify-content-between align-items-center flex-wrap gap-2">
                  <div>
                    <strong><%= req.teach_skill %></strong> ↔ <strong><%= req.learn_skill %></strong>
                    <span class="text-muted">with partner</span>
                  </div>
                  <div class="text-muted small"><%= req.updated_at.strftime('%b %d, %Y') %></div>
                </div>
              </li>
            <% end %>
          </ul>
        <% else %>
          <p class="text-muted mb-0">No past exchanges yet.</p>
        <% end %>
      </div>
    </div>
  </div>
</div>
